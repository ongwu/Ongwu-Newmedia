<% if (page.total > 1) { %>
<nav class="pagination-nav">
  <ul class="pagination-list">
    <!-- 上一页 -->
    <% if (page.prev) { %>
    <li class="pagination-item prev">
      <a href="<%= page.prev_link %>" class="pagination-link" title="上一页">
        <i class="fas fa-chevron-left"></i>
      </a>
    </li>
    <% } else { %>
    <li class="pagination-item prev disabled">
      <span class="pagination-link" title="上一页">
        <i class="fas fa-chevron-left"></i>
      </span>
    </li>
    <% } %>
    
    <!-- 页码 -->
    <% if (page.current === 1) { %>
    <li class="pagination-item active">
      <span class="pagination-link">1</span>
    </li>
    <% } else { %>
    <li class="pagination-item">
      <a href="<%= url_for(page.base) %>" class="pagination-link">1</a>
    </li>
    <% } %>
    
    <% if (page.current > 4) { %>
    <li class="pagination-item">
      <span class="pagination-ellipsis">...</span>
    </li>
    <% } %>
    
    <% for (var i = 2; i < page.total; i++) { %>
    <% if (i >= page.current - 2 && i <= page.current + 2) { %>
    <% if (i === page.current) { %>
    <li class="pagination-item active">
      <span class="pagination-link"><%= i %></span>
    </li>
    <% } else { %>
    <li class="pagination-item">
      <a href="<%= url_for(page.base + config.pagination_dir + '/' + i + '/') %>" class="pagination-link"><%= i %></a>
    </li>
    <% } %>
    <% } %>
    <% } %>
    
    <% if (page.current < page.total - 3) { %>
    <li class="pagination-item">
      <span class="pagination-ellipsis">...</span>
    </li>
    <% } %>
    
    <% if (page.total > 1) { %>
    <% if (page.current === page.total) { %>
    <li class="pagination-item active">
      <span class="pagination-link"><%= page.total %></span>
    </li>
    <% } else { %>
    <li class="pagination-item">
      <a href="<%= url_for(page.base + config.pagination_dir + '/' + page.total + '/') %>" class="pagination-link"><%= page.total %></a>
    </li>
    <% } %>
    <% } %>
    
    <!-- 下一页 -->
    <% if (page.next) { %>
    <li class="pagination-item next">
      <a href="<%= '/' + page.next_link %>" class="pagination-link" title="下一页">
        <i class="fas fa-chevron-right"></i>
      </a>
    </li>
    <% } else { %>
    <li class="pagination-item next disabled">
      <span class="pagination-link" title="下一页">
        <i class="fas fa-chevron-right"></i>
      </span>
    </li>
    <% } %>
  </ul>
</nav>
<% } %>